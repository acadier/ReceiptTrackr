<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.receipttrackr.Budget">

    <TextView
        android:id="@+id/BudgetLbl"
        android:layout_width="263dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:text="- Your Weekly Budget -"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currBudgetTxt"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:text="Not set"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BudgetLbl" />

    <Button
        android:id="@+id/setBudgetBtn"
        android:layout_width="318dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Set Budget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budgetBar" />

    <SeekBar
        android:id="@+id/budgetBar"
        android:layout_width="317dp"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        android:fadingEdge="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedBudgetTxt" />

    <TextView
        android:id="@+id/selectedBudgetTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="£0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newBudgetLbl" />

    <TextView
        android:id="@+id/newBudgetLbl"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="188dp"
        android:text="- New Weekly Budget -"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currBudgetTxt" />

    <TextView
        android:id="@+id/totalSpentLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Total Spent:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currBudgetTxt" />

    <TextView
        android:id="@+id/totalSpentTxt"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="0.0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalSpentLbl" />

    <TextView
        android:id="@+id/poundSignLbl"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="£"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/totalSpentTxt"
        app:layout_constraintEnd_toStartOf="@+id/totalSpentTxt"
        app:layout_constraintTop_toTopOf="@+id/totalSpentTxt"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
