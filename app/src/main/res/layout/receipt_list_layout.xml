<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="186dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="dateTxt"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textSize="18sp" />

    <TextView
        android:id="@+id/poundLbl"
        android:layout_width="9dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:text="Â£"
        app:layout_constraintStart_toStartOf="@+id/dateTxt"
        app:layout_constraintTop_toBottomOf="@+id/dateTxt"
        tools:textSize="15sp" />

    <TextView
        android:id="@+id/storeNameTxt"
        android:layout_width="57dp"
        android:layout_height="17dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="8dp"
        android:text="storeName"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toEndOf="@+id/dateTxt"
        app:layout_constraintTop_toBottomOf="@+id/dateTxt"
        tools:textSize="15sp" />

    <TextView
        android:id="@+id/totalTxt"
        android:layout_width="63dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:text="totalCostTxt"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/poundLbl"
        app:layout_constraintTop_toBottomOf="@+id/dateTxt"
        tools:textSize="15sp" />

</android.support.constraint.ConstraintLayout>