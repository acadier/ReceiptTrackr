<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/itemNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/itemPriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/itemNameTxt"
        app:layout_constraintStart_toStartOf="@+id/itemNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/itemNameTxt" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/itemPriceTxt"
        app:layout_constraintTop_toBottomOf="@+id/itemPriceTxt" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintStart_toStartOf="@+id/itemPriceTxt"
        app:layout_constraintTop_toBottomOf="@+id/itemPriceTxt" />

    <TextView
        android:id="@+id/poundSymbolLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/pound_symbol"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemPriceTxt"
        app:layout_constraintEnd_toStartOf="@+id/itemPriceTxt"
        app:layout_constraintTop_toTopOf="@+id/itemPriceTxt"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>